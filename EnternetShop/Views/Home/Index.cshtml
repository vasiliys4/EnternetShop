@model List<EnternetShop.Models.ViewModels.ProductViewModel>;

@{
    ViewData["Title"] = "Home Page";
}

@foreach (var item in Model)
{
    <h5>@item.Name</h5>
    <p><span class="mr-1"><strong>@item.Price руб</strong></span></p>
    <p class="pt-1"> @item.Description</p>
    <img src="" alt="код" />
    <div class="table-responsive mb-2">
    </div>
    <a class="btn btn-info" href="/home/index?page=1" role="button">Продолжить покупки</a>
    <a class="btn btn-info" href="/cart/add/@item.Id" role="button">Добавить в корзину</a>
}
